<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFormFragment"
    android:background="@color/background_screen">


    <TextView
        android:id="@+id/txt_title_sign_up_form"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_60sdp"
        android:textColor="@color/txt_all_screen"
        android:textSize="@dimen/_18ssp"
        android:text="@string/txt_title_sign_up_form"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_30sdp"/>

    <ImageView
        android:id="@+id/img_avatar_sign_up_form"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:src="@drawable/ic_avatar_woman"
        app:layout_constraintStart_toEndOf="@+id/txt_title_sign_up_form"
        app:layout_constraintTop_toTopOf="@+id/txt_title_sign_up_form" />

    <TextView
        android:id="@+id/txt_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_full_name"
        android:textColor="@color/txt_all_screen"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_title_sign_up_form"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar_sign_up_form" />

    <EditText
        android:id="@+id/edt_full_name"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintStart_toStartOf="@+id/txt_full_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_full_name" />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_password"
        android:textColor="@color/txt_all_screen"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_full_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_full_name" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintStart_toStartOf="@+id/txt_password"
        app:layout_constraintTop_toBottomOf="@+id/txt_password" />

    <TextView
        android:id="@+id/txt_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_password_confirm"
        android:textColor="@color/txt_all_screen"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_password"
        app:layout_constraintTop_toBottomOf="@+id/edt_password" />

    <EditText
        android:id="@+id/edt_password_confirm"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintStart_toStartOf="@+id/txt_password_confirm"
        app:layout_constraintTop_toBottomOf="@+id/txt_password_confirm" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="@string/btn_sign_up"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:textColor="@color/txt_all_screen"
        app:layout_constraintEnd_toEndOf="@+id/edt_password_confirm"
        app:layout_constraintStart_toStartOf="@+id/edt_password_confirm"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_confirm" />

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:text="@string/txt_back_sign_in"
        android:textColor="@color/txt_all_screen"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_up"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_full_name"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_full_name"
        app:layout_constraintTop_toTopOf="@+id/edt_full_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_password"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_password"
        app:layout_constraintTop_toTopOf="@+id/edt_password" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_password"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_password_confirm"
        app:layout_constraintTop_toTopOf="@+id/edt_password_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>