<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment"
    android:background="@color/background_screen">


    <ImageView
        android:id="@+id/img_avatar_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_avatar_sign_in"
        android:layout_marginTop="@dimen/_75sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title_sign_in"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/txt_title_sign_in"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/txt_all_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar_sign_in" />

    <TextView
        android:id="@+id/txt_email_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_email_sign_in"
        android:textColor="@color/txt_all_screen"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_title_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_sign_in" />

    <EditText
        android:id="@+id/edt_email_sign_in"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/custom_edit_text"
        android:textSize="@dimen/_35sdp"
        app:layout_constraintStart_toStartOf="@+id/txt_email_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_sign_in" />

    <TextView
        android:id="@+id/txt_email_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_password_sign_in"
        android:textColor="@color/txt_all_screen"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_email_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_sign_in" />

    <EditText
        android:id="@+id/edt_email_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/custom_edit_text"

        app:layout_constraintStart_toStartOf="@+id/txt_email_password"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_password" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:text="@string/btn_sign_in"
        android:background="@drawable/custom_button"
        android:layout_marginTop="@dimen/_40sdp"
        android:textColor="@color/txt_all_screen"
        app:layout_constraintEnd_toEndOf="@+id/edt_email_password"
        app:layout_constraintStart_toStartOf="@+id/edt_email_password"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_password" />

    <TextView
        android:id="@+id/txtSignInBack"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:text="@string/txt_back_sign_in"
        android:textColor="@color/txt_all_screen"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="@+id/btnSignIn"
        app:layout_constraintStart_toStartOf="@+id/btnSignIn"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_denotation_email"
        android:paddingTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_email_sign_in"
        app:layout_constraintTop_toTopOf="@+id/edt_email_sign_in" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_password"
        android:paddingTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/edt_email_password"
        app:layout_constraintTop_toTopOf="@+id/edt_email_password" />
</androidx.constraintlayout.widget.ConstraintLayout>